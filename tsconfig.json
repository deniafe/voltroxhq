{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/global/Background.jsx", "components/global/Background.jsx", "components/home/LoadingScreen.jsx", "components/home/ParticleAnimation.tsx", "components/about/Earth.jsx", "components/home/Interface.jsx", "components/services/AnimatedText.jsx"],
  "exclude": ["node_modules"]
}
